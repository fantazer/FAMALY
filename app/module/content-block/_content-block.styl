//! block content-block
.content-block
	+below(768px)
		fw()
		.btn
			width 100%
			text-align center
	f()
	margin-bottom 10px
.content-block__img
	+below(768px)
		width 100%
		margin-bottom 20px
	width 30%
	margin-right 20px
	img
		width 100%
		br(14px)
.content-block__info
	+below(768px)
		width 100%
	width 70%
.content-block__title
	+below(768px)
		text-align center
	color #e36101
	font-size 20px
	text-decoration underline
	text-transform uppercase
	margin-bottom 10px
	display inline-block
	&:hover
		color grey
.content-block__text
	margin-bottom 20px
	@extend .italy
.text-block--vertical
	.content-block
		fw()
	.content-block__img
		margin 0
		margin-bottom 10px
		img
			width 100%
		width 100%
	.content-block__info
		width 100%
	.type
		@extend .italy
	.type-lg
		font-size 20px
//!block content-block end