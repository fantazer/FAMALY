//! block main-slider
.main-slider
	position relative
	.owl-prev,
	.owl-next
		font-size 60px
		color orange
.main-slider__el
	width 100%
	height 500px
	background-size cover
	background-position center center
.main-slider--wraper
	position relative
.main-slider__form
	position absolute
	z-index 200
	right 20px
	top 50px
	width 320px
	padding 20px
	background rgba(0, 0, 0, 0.5)
	input
		width 100%
	form
		flex(mid)
		fw()
		fl()
.main-slider__title
	up() 
	text-align center
	color white
	font-weight 600
	font-size 22px
	margin-bottom 10px
.main-slider__text
	text-align center
	color white
	font-style italic
	margin-bottom 15px
.main-slider__footer
	height 150px
	width 100%
	bgi('bg-clod-bottom.png')
	margin-top -50px
	z-index 200
	background-size cover
	position relative
//!block main-slider end