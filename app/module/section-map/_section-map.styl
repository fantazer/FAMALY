//! block section-map
.section-map
	position relative
	height 490px
	width 100%
	background green
.section-map__wraper
	position absolute
	width 100%
	height 100%
	top 20px
.map__form
	+below(768px)
		width 100%
	z-index 200
	margin-top 45px
	width 320px
	padding 20px
	background white
	input
		width 100%
		border 1px solid #ececec
	form
		flex(mid)
		fw()
		fl()
.map__title
	up() 
	text-align center
	font-weight 600
	font-size 22px
	margin-bottom 10px
.map__text
	text-align center
	font-style italic
	margin-bottom 15px
//!block section-map end