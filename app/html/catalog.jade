//Include style
include block_html/_style.jade
body
	//Include header
	include block_html/_const.jade
	include ../module/**/*.jade
	
	+header-row()
	.content
		.main-cont
				+section-bread()
				+section-filter()
				.grid.grid--container
					.row
						//left-col
						.col.col--md-9
							- for (var j = 0; j < 2; j++)
								.text-block
									.type.type-lg.type--up Обучение детей
									- for (var i = 0; i < 4; i++)
										+content-block()
									.content-block
										.content-block__img
											img(src="img/children.jpg", alt="")
										.content-block__info
											a(href="#").content-block__title КАК ПРАВИЛЬНО ОБУЧАТЬСЯ В WA?
